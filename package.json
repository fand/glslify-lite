{
    "name": "glslify-lite",
    "description": "A fast, lightweight fork of glslify",
    "version": "0.0.7",
    "author": "fand <fand.gmork@gmail.com> (https://gmork.in/)",
    "bin": {
        "glslify-lite": "./bin/cli.js"
    },
    "bugs": "https://github.com/fand/glslify-lite/issues",
    "dependencies": {
        "convert-source-map": "^1.6.0",
        "get-stdin": "^7.0.0",
        "glsl-inject-defines": "^1.0.3",
        "glsl-token-defines": "^1.0.0",
        "glsl-token-depth": "^1.1.2",
        "glsl-token-descope": "^1.0.2",
        "glsl-token-scope": "^1.1.2",
        "glsl-token-string": "^1.0.1",
        "glsl-token-whitespace-trim": "^1.0.0",
        "glsl-tokenizer": "^2.1.5",
        "glslify-deps": "^1.3.1",
        "meow": "^5.0.0",
        "murmurhash-js": "^1.0.0",
        "npm-run-all": "^4.1.5",
        "pify": "^5.0.0",
        "shallow-copy": "0.0.1",
        "source-map": "^0.8.0-beta.0",
        "stack-trace": "0.0.10"
    },
    "devDependencies": {
        "@types/convert-source-map": "1.5.1",
        "@types/jest": "25.2.1",
        "@types/murmurhash-js": "1.0.3",
        "@types/node": "12.12.25",
        "@types/pify": "3.0.2",
        "@types/source-map": "0.5.7",
        "@types/stack-trace": "0.0.29",
        "@types/tmp": "0.1.0",
        "@typescript-eslint/eslint-plugin": "1.13.0",
        "@typescript-eslint/parser": "1.13.0",
        "codecov": "3.6.1",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.9.0",
        "eslint-plugin-jest": "22.21.0",
        "eslint-plugin-prettier": "3.1.2",
        "glsl-noise": "0.0.0",
        "husky": "4.2.3",
        "jest": "26.0.1",
        "lint-staged": "10.0.8",
        "prettier": "1.19.1",
        "tmp": "0.1.0",
        "ts-jest": "25.2.1",
        "typescript": "3.7.5"
    },
    "files": [
        "README.md",
        "package.json",
        "package-lock.json",
        "lib",
        "bin"
    ],
    "homepage": "https://github.com/fand/glslify-lite",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "jest": {
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testRegex": "/test/.*\\.test\\.ts$",
        "moduleFileExtensions": [
            "ts",
            "js",
            "json",
            "node"
        ],
        "coveragePathIgnorePatterns": [
            "<rootDir>/lib/",
            "<rootDir>/test/",
            "<rootDir>/node_modules/"
        ]
    },
    "keywords": [],
    "license": "MIT",
    "lint-staged": {
        "*.{js,ts,json,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "main": "lib/index.js",
    "repository": "https://github.com/fand/glslify-lite",
    "scripts": {
        "build": "tsc -d",
        "ci": "run-p lint build test && codecov",
        "lint": "eslint src/**/*.ts",
        "test": "jest --coverage"
    },
    "types": "lib/index.d.ts"
}
