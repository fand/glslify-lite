{
  "name": "glslify-for-live",
  "version": "0.0.0",
  "description": "A fork of [glslify](https://github.com/glslify/glslify) for linters, live coding, etc.",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc -d",
    "lint": "eslint src/**/*.ts",
    "test": "ava test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ]
  },
  "keywords": [],
  "author": "fand <fand.gmork@gmail.com> (https://gmork.in/)",
  "license": "MIT",
  "devDependencies": {
    "@types/convert-source-map": "^1.5.1",
    "@types/murmurhash-js": "^1.0.3",
    "@types/node": "^11.12.2",
    "@types/pify": "^3.0.2",
    "@types/resolve": "0.0.8",
    "@types/source-map": "^0.5.7",
    "@types/stack-trace": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "ava": "^1.4.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "glsl-noise": "0.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.1"
  },
  "dependencies": {
    "convert-source-map": "^1.6.0",
    "glsl-inject-defines": "^1.0.3",
    "glsl-token-defines": "^1.0.0",
    "glsl-token-depth": "^1.1.2",
    "glsl-token-descope": "^1.0.2",
    "glsl-token-scope": "^1.1.2",
    "glsl-token-string": "^1.0.1",
    "glsl-token-whitespace-trim": "^1.0.0",
    "glsl-tokenizer": "^2.1.5",
    "glslify-deps": "^1.3.1",
    "murmurhash-js": "^1.0.0",
    "pify": "^4.0.1",
    "resolve": "^1.10.0",
    "shallow-copy": "0.0.1",
    "source-map": "^0.7.3",
    "stack-trace": "0.0.10"
  }
}
